<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd schemas/NLog.xsd"
      autoReload="true"
      internalLogFile="C:\temp\nlog-internal.log"
      internalLogLevel="Warn">

	<!-- Define various log targets -->
	<targets>
		<!-- Write logs to file -->
		<target xsi:type="File" name="file" fileName="${specialfolder:folder=ApplicationData}/YourAppName/logs/${shortdate}.log"
                layout="${longdate} ${uppercase:${level}} ${message} ${exception:format=tostring} ${callsite:className=true:methodName=true:fileName=false:includeSourcePath=false}" />
	</targets>

	<!-- Define rules to map from loggers to targets -->
	<rules>
		<!-- All logs, including from Microsoft -->
		<logger name="*" minlevel="Trace" writeTo="file" />
	</rules>

</nlog>
