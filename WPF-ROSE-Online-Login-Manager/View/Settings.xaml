<UserControl x:Class="ROSE_Online_Login_Manager.View.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1025"
             Style="{StaticResource View_Style}">
    <Grid>
        <Border Margin="10">
            <StackPanel Margin="10">
                <!-- ROSE Online Folder Location -->
                <Label Content="ROSE Online Folder Location" 
                       Foreground="WhiteSmoke" FontSize="14" Padding="0" Margin="5 0 5 0"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding RoseGameFolderPathDisplay, UpdateSourceTrigger=PropertyChanged}"
                             Width="300" Margin="5 0"/>
                    <Button Command="{Binding GameFolderSearchCommand}" 
                            Style="{StaticResource CustomImageButtonStyle}" 
                            Height="18" Width="18">
                        <Image Source="../Resources/Images/magnify.png"/>
                    </Button>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
